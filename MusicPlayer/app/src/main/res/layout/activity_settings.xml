<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Set Theme"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:id="@+id/coolbluetheme"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_color"
            android:tint="@color/cool_blue"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:id="@+id/coolgreentheme"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_color"
            android:tint="@color/cool_green"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/coolpinktheme"
            android:src="@drawable/ic_color"
            android:tint="@color/cool_pink"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:id="@+id/coolpurpletheme"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_color"
            android:tint="@color/black"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/coolpurple2heme"
            android:src="@drawable/ic_color"
            android:tint="@color/purple_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Sort By"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingStart="5dp"
            android:gravity="center|start"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:id="@+id/sortimg"
            android:layout_height="match_parent"
            android:src="@drawable/ic_sort"
            android:padding="5dp"
            android:tint="@color/cool_blue"/>

    </LinearLayout>

    <TextView
        android:id="@+id/versionName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="App Version"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="start"/>

</LinearLayout>